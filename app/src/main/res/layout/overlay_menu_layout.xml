<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Titolo del menu -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu Principale"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="12dp" />

    <!-- Griglia 3x3 per icone -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:paddingBottom="16dp">

        <!-- Esempio di 9 icone -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_menu_camera"
            android:contentDescription="Icona 1"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_menu_gallery"
            android:contentDescription="Icona 2"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_menu_manage"
            android:contentDescription="Icona 3"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_menu_send"
            android:contentDescription="Icona 4"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_menu_compass"
            android:contentDescription="Icona 5"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_menu_help"
            android:contentDescription="Icona 6"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_menu_preferences"
            android:contentDescription="Icona 7"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_menu_agenda"
            android:contentDescription="Icona 8"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_menu_view"
            android:contentDescription="Icona 9"/>

    </GridLayout>

    <!-- Area funzionale grande -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FunzionalitÃ  Extra..."
        android:textSize="16sp"
        android:gravity="center"
        android:padding="12dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white"/>

</LinearLayout>
